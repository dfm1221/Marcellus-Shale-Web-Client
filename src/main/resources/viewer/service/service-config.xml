<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd">



	<context:component-scan base-package="viewer.service" />
	<context:component-scan base-package="viewer.mapper" />
    <context:component-scan base-package="viewer.security"/>
	
	<bean id="serviceBeanMapper" class="org.dozer.DozerBeanMapper" lazy-init="false" scope="singleton">
		<property name="mappingFiles">
			<list>
				<value>service-dozer-mappings.xml</value>
			</list>
		</property>
	</bean>


    <bean id="applicationSecurityContext" class="viewer.security.ApplicationSecurityContext" />

</beans>
